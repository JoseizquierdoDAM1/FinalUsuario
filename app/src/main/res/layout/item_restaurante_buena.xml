<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/labelNombreRecycler"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Nombre del Restaurante"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenRecycler"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/labelNombreRecycler"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/labelTipoRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenRecycler"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tipo de Restaurante"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelCiudadRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenRecycler"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Ciudad del Restaurante"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="370dp"
        android:layout_marginStart="110dp"
        android:text="Reservar" />

    <ImageView
        android:id="@+id/estrellaNoFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/estrellaFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/ev1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/ev2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="280dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/ev3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="280dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/ev4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="280dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/ev5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="280dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/ell4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="280dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/ell1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/ell2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="280dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/ell3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="280dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/ell5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="280dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/buttonreseñas"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="330dp"
        android:layout_marginStart="110dp"
        android:text="Ver reseñas" />

    <!-- Botón para ver detalle -->

</RelativeLayout>
